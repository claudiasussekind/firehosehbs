
<div class="span6 offset3 boxy text-center">
	<h1 class="h1-custom">
		Upload another lesson
	</h1>
	
	<%= simple_form_for @pic do |f| %>
		
<h2>
		<%= f.input :lesson, :label => 'Your latest lesson', :placeholder => '1,2, etc.'  %>
		<%= f.input :image, :label => 'Show it'  %>
		<%= f.input :emotion, :label => 'How did you feel?', :placeholder => 'Stoked, Happy or Jazzed' %>
		<%= f.input :learned, :label => 'What did you learn?', :placeholder => 'HTML5, CSS3, Rails, Github' %>

		<%= submit_tag 'Save', :class => 'btn btn-warning btn-large' %>
</div>
	<% end %>

